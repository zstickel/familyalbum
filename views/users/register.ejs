<% layout('/layouts/boilerplate')%>


    <div class="row">
        <h1 class="text-center">Register</h1>
        <div class="col-6 offset-3">
            <form action="/register" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="user[username]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <div class="input-group has-validation">
                        <input class="form-control" type="password" id="password" name="user[password]" required>
                        <div class="invalid-feedback">Try again!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="first">First name</label>
                    <input class="form-control" type="text" id="first" name="user[first]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="last">Last Name</label>
                    <input type="text" class="form-control" id="last" name=user[last] required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input type="email" class="form-control" id="email" name=user[email] required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Register</button>
                </div>
        </div>

        </form>

    </div>

    </div>

    <script src="/javascripts/formvalidation.js"></script>