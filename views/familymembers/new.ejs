<% layout('/layouts/boilerplate')%>


    <div class="row">
        <h2 class="text-center">Add a family member to <%=familymember.first%>'s tree</h1>
                <div class="col-6 offset-3">
                    <form action="/familymember/<%=familymember._id%>/new" method="POST" class="needs-validation"
                        novalidate>

                        <div class="mb-3">
                            <label class="form-label" for="first">First name</label>
                            <input class="form-control" type="text" id="first" name="familymember[first]" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="last">Last Name</label>
                            <input type="text" class="form-control" id="last" name=familymember[last] required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input type="email" class="form-control" id="email" name=familymember[email]>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-3">
                            <label for="relationship" class="form-label">Relationship</label>
                            <select name="familymember[relationship]" id="relationship" class="custom-select">
                                <option selected>Mother</option>
                                <option value="Father">Father</option>
                                <option value="Sibling">Sibling</option>
                                <option value="ChildMother">Child (this family member is the mother)</option>
                                <option value="ChildFather">Child (this family member is the father)</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary">Add to the family tree</button>
                        </div>
                </div>

                </form>

    </div>

    </div>

    <script src="/javascripts/formvalidation.js"></script>