<% layout('/layouts/boilerplate')%>

    <div class="row">
        <% if (!member) {%>
            <h2>It looks like you are the first member of your family to join!</h2>
            <h2>Please head to your <a href="/familymember/<%=user._id%>/mytree">family tree</a> to get started!</h2>
            <% } else{ %>
                <h1 class="text-center">Join the family!</h1>
                <h2 class="text-center">Is this you? <%=member.first%>
                        <%=member.last%>
                </h2>
                <div class="col-6 offset-3">
                    <form action="/joinfamily" method="POST">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="join" id="join" value="join" checked>
                            <label class="form-check-label" for="join">
                                Yes that's me, join the family!
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="skipjoin" id="skipjoin" value="skip">
                            <label class="form-check-label" for="skipjoin">
                                That's not me! I'll start my own family tree from scratch.
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
                <% } %>
    </div>